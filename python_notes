name = "Curie"                                                          

In [7]: "Hello, " + name + "!"                                                  
Out[7]: 'Hello, Curie!'

In [8]: "hello, %s!" % name                                                     
Out[8]: 'hello, Curie!'

In [9]: weather = 'somewhat overcast'                                           

In [10]: 'Hello, %s! The weather is %s' % (name, weather)                       
Out[10]: 'Hello, Curie! The weather is somewhat overcast'

In [11]: 'Hello, {}! The weather is {}.'.format(name, weather)                  
Out[11]: 'Hello, Curie! The weather is somewhat overcast.'

In [12]: f'Hello, {name}! The weather is {weather}.'                            
Out[12]: 'Hello, Curie! The weather is somewhat overcast.'                                                             

