greeting = 'Hello, Curie!'                                             

In [24]: greeting.lower()                                                       
Out[24]: 'hello, curie!'

In [25]: greeting.upper()                                                       
Out[25]: 'HELLO, CURIE!'

In [26]: greeting.split(', ')                                                   
Out[26]: ['Hello', 'Curie!']

In [27]: '210.834.7465'                                                         
Out[27]: '210.834.7465'

In [28]: '210.834.7465'.split('.')                                              
Out[28]: ['210', '834', '7465']

In [30]: '-'.join('210.834.7465'.split('.'))                                    
Out[30]: '210-834-7465'

In [31]: greeting = 'Hello, Curie!'                                             

In [32]: greeting[:]                                                            
Out[32]: 'Hello, Curie!'
# Step
In [33]: greeting[::-1]                                                         
Out[33]: '!eiruC ,olleH'

In [34]: 'racecar' # is this a palindrome?                                      
Out[34]: 'racecar'

In [35]: word = 'racecar'                                                       

In [36]: word == word[::-1]                                                     
Out[36]: True


